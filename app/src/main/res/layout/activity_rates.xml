<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    android:background="@color/rate_layout_bg"
    tools:context=".RatesActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:text="@string/rates_tv_title"
        android:textColor="@color/rates_tv_title"
        android:textSize="30sp"
        android:textStyle="bold"
        />


<!--    <TextView-->
<!--        android:id="@+id/rates_tv_container"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100dp"-->
<!--        android:padding="10dp"-->

<!--        />-->
    <SearchView
        android:id="@+id/rates_sv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <Button
        android:id="@+id/btn_select_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите дату"
        android:layout_margin="8dp" />
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rates_rv_container"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"

    />

</LinearLayout>